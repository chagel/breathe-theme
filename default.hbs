<!doctype html>
<html lang="{{@site.lang}}">
  <head>

    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    {{! mobile friendly }}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{! page meta }}
    <title>{{meta_title}}</title>

    {{! feed, styles, etc. }}
    <link rel="alternate" type="application/rss+xml" title="RSS" href="{{@site.url}}/rss/" />
    <link rel="stylesheet" href="{{asset "css/main.css"}}" />
    <link href="{{asset "prism/prism.css"}}" rel='stylesheet' type='text/css' />
    <script type="text/javascript" src="{{asset "prism/prism.js"}}"></script>

    {{!-- This tag outputs SEO meta+structured data and other important settings --}}
    {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    <div class="main-wrapper">
      <header class="main-header">
        <div class="title-wrapper">
          <h1><a href="{{@site.url}}">{{@site.title}}</a></h1>
          <p>{{@site.description}}</p>
        </div>

        <nav class="main-menu">
          {{navigation}}
        </nav>
      </header>

      <main>
        {{{body}}}
      </main>

      <footer class="main-footer">
        <nav class="main-menu">{{navigation}}</nav>
        <p><a href="{{@site.url}}/rss/">Subscribe to RSS</a></p>
        <p>Â© {{date format="YYYY"}} {{@site.title}}. All rights reserved.</p>
      </footer>
      {{ghost_foot}}
    </div>{{! main wrapper }}
  </body>
</html>
